{
  "name": "ember-template-lint",
  "version": "3.4.2",
  "description": "Linter for Ember or Handlebars templates.",
  "keywords": [],
  "homepage": "https://github.com/ember-template-lint/ember-template-lint",
  "bugs": {
    "url": "https://github.com/ember-template-lint/ember-template-lint/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/ember-template-lint/ember-template-lint.git"
  },
  "license": "MIT",
  "author": "Robert Jackson <me@rwjblue.com>",
  "main": "lib/index.js",
  "bin": "./bin/ember-template-lint.js",
  "scripts": {
    "lint": "npm-run-all lint:* --continue-on-error",
    "lint:docs": "markdownlint **/*.md",
    "lint:js": "eslint . --cache",
    "lint:package-json": "sort-package-json --check",
    "new:rule": "node dev/generate.js new-rule",
    "update:rules-index": "node dev/generate.js rules-index",
    "release": "release-it",
    "test": "npm-run-all lint:* test:*",
    "test:jest": "jest",
    "update:readme": "node ./scripts/update-rules.js"
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/test/"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/test/jest-setup.js"
    ],
    "testMatch": [
      "<rootDir>/test/**/*-test.js"
    ]
  },
  "dependencies": {
    "@ember-template-lint/todo-utils": "^8.1.0",
    "chalk": "^4.1.1",
    "date-fns": "^2.22.1",
    "ember-template-recast": "^5.0.3",
    "find-up": "^5.0.0",
    "fuse.js": "^6.4.6",
    "get-stdin": "^8.0.0",
    "globby": "^11.0.3",
    "is-glob": "^4.0.1",
    "micromatch": "^4.0.4",
    "resolve": "^1.20.0",
    "v8-compile-cache": "^2.3.0",
    "yargs": "^16.2.0"
  },
  "devDependencies": {
    "@babel/parser": "^7.14.4",
    "@babel/traverse": "^7.14.2",
    "@microsoft/jest-sarif": "^1.0.0-beta.0",
    "common-tags": "^1.8.0",
    "eslint": "^7.28.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-import-helpers": "^1.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-unicorn": "^33.0.1",
    "execa": "^5.1.1",
    "fixturify-project": "^2.1.1",
    "jest": "^27.0.4",
    "markdownlint-cli": "^0.27.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.1",
    "release-it": "^14.7.0",
    "release-it-lerna-changelog": "^3.1.0",
    "sort-package-json": "^1.50.0",
    "yeoman-environment": "^3.1.0",
    "yeoman-generator": "^5.3.0",
    "yeoman-test": "^5.1.0"
  },
  "engines": {
    "node": ">= 10.24 < 11 || 12.* || >= 14.*"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "release-it": {
    "plugins": {
      "release-it-lerna-changelog": {
        "infile": "CHANGELOG.md",
        "launchEditor": true
      }
    },
    "git": {
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "tokenRef": "GITHUB_AUTH"
    }
  },
  "volta": {
    "node": "12.18.3",
    "yarn": "1.22.4"
  }
}
